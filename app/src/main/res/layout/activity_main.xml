<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="6dp">

            <Button
                android:id="@+id/btn_demo_layout_index"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="布局案例" />

            <Button
                android:id="@+id/btn_demo_base_widget"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="UI基础控件" />

            <Button
                android:id="@+id/btn_demo_service"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="测试案例 Service" />

            <Button
                android:id="@+id/btn_demo_webview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="测试案例 WebView" />

            <Button
                android:id="@+id/btn_demo_file"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="测试案例 file 管理" />

            <Button
                android:id="@+id/btn_demo_andserver"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="测试案例 AndServer" />

            <Button
                android:id="@+id/btn_demo_broadcast"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="测试案例 广播 Broadcast" />

            <Button
                android:id="@+id/btn_demo_dialog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="测试案例 对话框 Dialog" />

            <Button
                android:id="@+id/btn_demo_fragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="测试案例 碎片 Fragment" />

            <Button
                android:id="@+id/btn_demo_viewpager"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="测试案例 ViewPager" />

            <Button
                android:id="@+id/btn_demo_network"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="测试案例 网络通信" />

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>